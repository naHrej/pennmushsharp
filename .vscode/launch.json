{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "PennMushSharp Runtime",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "args": [
        "run",
        "--project",
        "src/PennMushSharp.Runtime"
      ],
      "cwd": "${workspaceFolder}/PennMushSharp",
      "console": "integratedTerminal",
      "stopAtEntry": false,
      "env": {
        "DOTNET_ENVIRONMENT": "Development"
      }
    }
  ]
}
